<Window x:Class="pr.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:pr.Views"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1350">
    <Window.Resources>
        <Style TargetType="ListBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Margin" Value="0,1"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="3.5*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0" Header="Специальности">
            <DockPanel>
                <UniformGrid Rows="1" DockPanel.Dock="Bottom" Margin="0,5">
                    <Button x:Name="AddSpecialtyButton" Width="60" Height="30">
                        <Button.Content>
                            <fa:ImageAwesome Icon="Solid_PlusSquare" Width="15"/>
                        </Button.Content>
                    </Button>
                    <Button x:Name="EditSpecialtyButton" Width="60" Height="30">
                        <Button.Content>
                            <fa:ImageAwesome Icon="Solid_PencilAlt" Width="15"/>
                        </Button.Content>
                    </Button>
                    <Button x:Name="DeleteSpecialtyButton" Width="60" Height="30">
                        <Button.Content>
                            <fa:ImageAwesome Icon="Solid_Trash" Width="15"/>
                        </Button.Content>
                    </Button>
                </UniformGrid>
                <ListBox x:Name="SpecialtiesListBox" SelectionChanged="SpecialtiesListBox_SelectionChanged" />
            </DockPanel>
        </GroupBox>
        <GroupBox Grid.Column="1" Header="Группы">
            <DockPanel>
                <UniformGrid Rows="1" DockPanel.Dock="Bottom" Margin="0,5">
                    <Button x:Name="AddGroupButton" Width="40" Height="30">
                        <Button.Content>
                            <fa:ImageAwesome Icon="Solid_PlusSquare" Width="15"/>
                        </Button.Content>
                    </Button>
                    <Button x:Name="EditGroupButton" Width="40" Height="30">
                        <Button.Content>
                            <fa:ImageAwesome Icon="Solid_PencilAlt" Width="15"/>
                        </Button.Content>
                    </Button>
                    <Button x:Name="DeleteGroupButton" Width="40" Height="30">
                        <Button.Content>
                            <fa:ImageAwesome Icon="Solid_Trash" Width="15"/>
                        </Button.Content>
                    </Button>
                </UniformGrid>
                <ListBox x:Name="GroupsListBox" SelectionChanged="GroupsListBox_SelectionChanged"/>
            </DockPanel>
        </GroupBox>
        <GroupBox Grid.Column="2" Header="Студенты">
            <DockPanel>
                <UniformGrid Rows="1" DockPanel.Dock="Bottom" Margin="150,5">
                    <Button x:Name="SaveStudentsButton" Margin="80,0" Height="30" Click="SaveStudentsButton_Click">
                        <Button.Content>
                            <fa:ImageAwesome Icon="Regular_Save" Margin="5"/>
                        </Button.Content>
                    </Button>
                    <Button x:Name="DeleteStudentButton" Margin="80,0" Height="30" Click="DeleteStudentButton_Click">
                        <Button.Content>
                            <fa:ImageAwesome Icon="Regular_TrashAlt" Margin="5"/>
                        </Button.Content>
                    </Button>
                </UniformGrid>
                <DataGrid x:Name="StudentsDataGrid" 
                      AutoGenerateColumns="False"
                      CanUserAddRows="True"
                      CanUserResizeRows="False"
                      GridLinesVisibility="All"
                      VerticalGridLinesBrush="DarkGray"
                      AlternatingRowBackground="#FFF0F0F0" 
                      HorizontalGridLinesBrush="LightGray"
                      SelectionMode="Single"
                      FontSize="14"
                      Background="White"
                      BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Фото" Width="0.5*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding PhotoPath, TargetNullValue={x:Null}}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <Image Source="{Binding PhotoPath, TargetNullValue={x:Null}}"/>
                                        <Button x:Name="LoadImageButton" Content="Загрузить" Click="LoadImageButton_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}" Width="1*"/>
                        <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="0.7*"/>
                        <DataGridTextColumn Header="Отчество" Binding="{Binding LastName}" Width="1*"/>
                        <DataGridTemplateColumn Header="Пол" Width="0.6*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Gender.GenderName}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding Genders, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                              SelectedItem="{Binding Gender}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Дата рождения" Width="0.8*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Birthday, StringFormat=dd.MM.yyyy}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <DatePicker SelectedDate="{Binding Birthday}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Средний балл" Binding="{Binding GPA}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>
    </Grid>
</Window>
