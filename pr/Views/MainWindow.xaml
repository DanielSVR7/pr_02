<Window x:Class="pr.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr.Views"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        xmlns:vm="clr-namespace:pr.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1350">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="ListBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Margin" Value="0,1"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0" Header="Специальности" Grid.Row="1">
            <DockPanel>
                <StackPanel>
                    <TextBlock Text="Поиск по специальности" Margin="5"/>
                    <TextBox  Margin="10,0"/>
                    <ListBox ItemsSource="{Binding Specialties}" SelectedItem="{Binding SelectedSpecialty}"/>
                </StackPanel>
                
            </DockPanel>
        </GroupBox>
        <GroupBox Grid.Column="1" Header="Группы" Grid.Row="1">
            <DockPanel>
                <StackPanel Orientation="Vertical" DockPanel.Dock="Bottom">
                    <UniformGrid Columns="3" Margin="40,0">
                        <TextBlock Text="{Binding SelectedSpecialty.SpecialtyReduction}" FontSize="16"/>
                        <TextBlock Text="—" FontSize="16" Width="10"/>
                        <TextBox Text="{Binding SelectedGroup.GroupNumber, UpdateSourceTrigger=PropertyChanged}" Height="25" FontSize="16" />
                    </UniformGrid>
                    <UniformGrid Rows="1" Margin="0,5">
                        <Button Command="{Binding AddGroupCommand}" Width="40" Height="30">
                            <Button.Content>
                                <fa:ImageAwesome Icon="Solid_PlusSquare" Width="15"/>
                            </Button.Content>
                        </Button>
                        <Button Command="{Binding SaveGroupCommand}" Width="40" Height="30">
                            <Button.Content>
                                <fa:ImageAwesome Icon="Solid_Save" Width="15"/>
                            </Button.Content>
                        </Button>
                        <Button Command="{Binding DeleteGroupCommand}" Width="40" Height="30">
                            <Button.Content>
                                <fa:ImageAwesome Icon="Solid_Trash" Width="15"/>
                            </Button.Content>
                        </Button>
                    </UniformGrid>
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="0">
                    <TextBlock Text="Поиск по группе" Margin="5"/>
                    <TextBox  Margin="10,0"/>
                    <ListBox ItemsSource="{Binding SelectedSpecialty.Groups}" SelectedItem="{Binding SelectedGroup}"/>
                </StackPanel>
            </DockPanel>
        </GroupBox>
        <GroupBox Grid.Column="2" Header="Студенты" Grid.ColumnSpan="3" Grid.Row="1">
            <DockPanel>
                <UniformGrid Rows="1" DockPanel.Dock="Bottom" Margin="150,5">
                    <Button Command="{Binding SaveStudentsCommand}" Margin="80,0" Height="30">
                        <Button.Content>
                            <fa:ImageAwesome Icon="Regular_Save" Margin="5"/>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding DeleteStudentCommand}" CommandParameter="{Binding SelectedStudent}" Margin="80,0" Height="30">
                        <Button.Content>
                            <fa:ImageAwesome Icon="Regular_TrashAlt" Margin="5"/>
                        </Button.Content>
                    </Button>
                </UniformGrid>
                <StackPanel>
                    <UniformGrid Columns="3" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Поиск по ФИО" Margin="5"/>
                            <TextBox  Margin="10,0"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Год рождения" Margin="5"/>
                            <TextBox  Margin="10,0"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Средний балл" Margin="5"/>
                            <TextBox  Margin="10,0"/>
                        </StackPanel>
                    </UniformGrid>

                    <DataGrid ItemsSource="{Binding SelectedGroup.Students}"
                          SelectedItem="{Binding SelectedStudent}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="True"
                          CanUserResizeRows="False"
                          GridLinesVisibility="All"
                          VerticalGridLinesBrush="DarkGray"
                          AlternatingRowBackground="#FFF0F0F0" 
                          HorizontalGridLinesBrush="LightGray"
                          SelectionMode="Single"
                          FontSize="14"
                          Background="White"
                          BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Фото" Width="0.5*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding PhotoPath, TargetNullValue={x:Null}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="{Binding PhotoPath, TargetNullValue={x:Null}}"/>
                                            <Button Command="{Binding DataContext.LoadImageCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                CommandParameter="{Binding DataContext.SelectedStudent, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                Content="Загрузить"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}" Width="1*"/>
                            <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="0.7*"/>
                            <DataGridTextColumn Header="Отчество" Binding="{Binding LastName}" Width="1*"/>
                            <DataGridTemplateColumn Header="Пол" Width="0.6*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Gender.GenderName}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{Binding DataContext.Genders, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                              SelectedItem="{Binding Gender}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Дата рождения" Width="0.8*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Birthday, StringFormat=dd.MM.yyyy}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <DatePicker SelectedDate="{Binding Birthday}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Средний балл" Binding="{Binding GPA}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </DockPanel>
        </GroupBox>
    </Grid>
</Window>
